---
interface Props {
  name: string;
  phone: string;
  gender: string;
  registered: Date;
}
const { name, phone, gender, registered } = Astro.props;
const genderIcon = (gender: string) => {
  if (gender === 'male') {
    return '👨🏻';
  } else if (gender === 'female') {
    return '👩🏻';
  } else {
    return '🏳️‍🌈';
  }
};
const icon = genderIcon(gender);
---

<tr class='border-b border-slate-200 *:px-3 *:py-1'>
  <td class='text-3xl'>
    {icon}
  </td>
  <td class='font-bold'>
    {name.substring(0, 1).toUpperCase() + '••••' + name.slice(-1).toUpperCase()}
  </td>
  <td>{phone.substring(0, 3) + '••••' + phone.slice(-3)}</td>
  <td class='text-gray-500'>
    {
      registered.toLocaleDateString('th-TH', {
        timeZone: 'Asia/Bangkok',
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })
    }
    เวลา
    {registered.toLocaleTimeString('th-TH', { timeZone: 'Asia/Bangkok', hour: 'numeric', minute: '2-digit' })}
    น.
  </td>
</tr>
